{
    "name": "ordnungshub",
    "version": "0.1.0",
    "description": "AI-Powered System Organizer App",
    "main": "src/frontend/main.js",
    "directories": {
        "doc": "docs",
        "test": "tests"
    },
    "scripts": {
        "start": "electron .",
        "dev": "npm-run-all --parallel dev:backend dev:react dev:electron",
        "dev:backend": "python3 ultra_simple_backend.py",
        "dev:backend-enhanced": "python enhanced_backend.py",
        "dev:react": "webpack serve --mode development",
        "dev:electron": "wait-on http://localhost:3002 && electron . --dev",
        "build": "npm run build:react && npm run build:electron",
        "build:react": "webpack --mode production",
        "build:electron": "electron-builder",
        "test": "npm run test:unit && npm run test:integration",
        "test:unit": "jest tests/unit --config=jest.config.js",
        "test:integration": "jest tests/integration --config=jest.config.js",
        "test:e2e": "playwright test",
        "test:watch": "jest --watch",
        "test:coverage": "jest --coverage",
        "test:update": "jest --updateSnapshot",
        "test:react": "jest --config jest.react.config.js",
        "test:ci": "npm run test -- --ci --runInBand --coverage",
        "lint": "eslint src/frontend --ext .js,.jsx,.ts,.tsx",
        "predev": "kill-port 3002 && kill-port 8001",
        "dev:monitor": "node console-monitor.js",
        "dev:full": "npm-run-all --parallel dev:backend dev:react dev:monitor",
        "prepare": "husky install"
    },
    "keywords": [
        "productivity",
        "ai",
        "organizer",
        "desktop-app"
    ],
    "author": "Pascal 213",
    "license": "MIT",
    "dependencies": {
        "@types/react": "^19.1.7",
        "@types/react-dom": "^19.1.6",
        "cross-env": "^7.0.3",
        "react": "^19.1.0",
        "react-dom": "^19.1.0",
        "react-router-dom": "^7.6.2"
    },
    "devDependencies": {
        "@babel/core": "^7.27.4",
        "@babel/preset-env": "^7.27.2",
        "@babel/preset-react": "^7.27.1",
        "@babel/preset-typescript": "^7.27.1",
        "@playwright/test": "^1.53.0",
        "@testing-library/jest-dom": "^6.6.3",
        "@testing-library/react": "^16.3.0",
        "@testing-library/user-event": "^14.6.1",
        "@types/jest": "^30.0.0",
        "@types/node": "^22.15.30",
        "babel-jest": "^30.0.0",
        "chalk": "^4.1.2",
        "css-loader": "^7.1.2",
        "electron": "^36.4.0",
        "electron-builder": "^26.0.12",
        "eslint": "^9.28.0",
        "eslint-plugin-jest": "^28.14.0",
        "eslint-plugin-testing-library": "^7.5.3",
        "html-webpack-plugin": "^5.6.3",
        "husky": "^9.1.7",
        "identity-obj-proxy": "^3.0.0",
        "jest": "^29.7.0",
        "jest-canvas-mock": "^2.5.2",
        "jest-environment-jsdom": "^30.0.0",
        "jest-junit": "^16.0.0",
        "jest-watch-typeahead": "^2.2.2",
        "kill-port": "^2.0.1",
        "npm-run-all": "^4.1.5",
        "playwright": "^1.53.0",
        "style-loader": "^4.0.0",
        "ts-jest": "^29.4.0",
        "ts-loader": "^9.5.2",
        "typescript": "^5.8.3",
        "wait-on": "^8.0.3",
        "webpack": "^5.99.9",
        "webpack-cli": "^6.0.1",
        "webpack-dev-server": "^5.2.2"
    },
    "engines": {
        "node": ">=18.0.0"
    }
}
